@model Category //relate to model category

<form method="post" asp-action="Delete">
    @* <input asp-for="Id" hidden /> *@
    <div class="border p-2 mt-5">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
        </div>
    </div>
    @* <div asp-validation-summary="All"></div> *@
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" disabled class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DisplayOrder"></label>
        <input asp-for="DisplayOrder" disabled class="form-control" />
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
    <button type="submit" class="btn btn-secondary" style="width:150px" asp-controller="Category" asp-action="Index">Back to category</button>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" /> @* //client side validation *@
} 
